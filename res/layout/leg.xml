<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/trip"
    >

    <TableRow
        android:id="@+id/departureView">

        <TextView
            android:id="@+id/departureTimeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="9:15"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:layout_gravity="top|center_vertical|end"
            android:textColor="?android:attr/textColorPrimary"/>

        <TextView
            android:id="@+id/departureLocationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Departure Station with a long name"
            android:layout_weight="1"
            android:paddingTop="3dp"
            android:paddingRight="3dp"
            android:background="?selectableItemBackground"
            android:textColor="?android:attr/textColorPrimary"/>

        <TextView
            android:id="@+id/departurePlatformView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="13b"
            android:layout_gravity="right"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:paddingRight="3dp"
            />

    </TableRow>

    <TableRow
        android:id="@+id/infoView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/arrowDown"
                style="@style/DownArrow"/>

            <TextView
                android:id="@+id/departureDelayView"
                style="@style/Delay"
                tools:text="+10"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/leg_details"
            android:layout_span="2"
            android:layout_column="0"
            android:layout_weight="1"/>

    </TableRow>

    <TableRow>
        <TableLayout
            android:id="@+id/stopsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:layout_weight="1"/>
    </TableRow>

    <TableRow
        android:id="@+id/arrivalView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/arrivalTimeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                tools:text="9:15"
                android:paddingLeft="3dp"
                android:paddingTop="3dp"
                android:paddingRight="5dp"
                android:textColor="?android:attr/textColorPrimary"/>

            <TextView
                android:id="@+id/arrivalDelayView"
                android:layout_gravity="right"
                style="@style/Delay"
                tools:text="+10"/>

        </LinearLayout>

        <TextView
            android:id="@+id/arrivalLocationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Arrival Station with also a long name"
            android:layout_weight="1"
            android:paddingTop="3dp"
            android:paddingRight="3dp"
            android:background="?selectableItemBackground"
            android:textColor="?android:attr/textColorPrimary"/>

        <TextView
            android:id="@+id/arrivalPlatformView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="5"
            android:layout_gravity="right"
            android:padding="3dp"/>

    </TableRow>

    <TableRow
        android:id="@+id/dividerView">

        <include
            layout="@layout/divider_horizontal"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_span="3"
            android:layout_weight="1"/>

    </TableRow>

</TableLayout>